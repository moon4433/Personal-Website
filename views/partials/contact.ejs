<div id="contact" class="contact">
    <div class="contact__top"></div>
    <h3 id="section-title" class="contact">Contact</h3>
    <p class="contact__text">
      Have a question or want to work together?
    </p>
    <form id="contact-form" class="contact__form" method="POST" action="/">
      <div class="contact__form-row">
        <input placeholder="Name" type="name" name="name" id="name" required>
      </div>
      <div class="contact__form-row">
          <input placeholder="Enter Email" type="email" name="email" id="email" required>
      </div>
      <div class="contact__form-row">
          <textarea placeholder="Your Message" type="message" name="message" id="message" required></textarea>
      </div>
      <div class="contact__form-row">
          <input type="submit" id="confirmbutton" name="confirm" value="submit">
      </div>
    </form>
</div>